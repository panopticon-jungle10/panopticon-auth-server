{
  "family": "panopticon-auth-server",
  "taskRoleArn": "arn:aws:iam::338952532870:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::338952532870:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "auth-server",
      "image": "338952532870.dkr.ecr.ap-northeast-2.amazonaws.com/panopticon-auth-server:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
          "name": "auth-server-8080-tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8080"
        }
        ,
        {
          "name": "PG_SSL",
          "value": "true"
        },
        {
          "name": "PG_SSL_REJECT_UNAUTHORIZED",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:338952532870:parameter/panopticon/database_url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:338952532870:parameter/panopticon/jwt_secret"
        },
        {
          "name": "PG_SSL_CA",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:338952532870:parameter/panopticon/pg_ssl_ca"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/panopticon-auth-server",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
